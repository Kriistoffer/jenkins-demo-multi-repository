def repositoryName
pipeline {
    agent any
    tools {
        nodejs "nodejs"
    }
    environment {
        baseUrl = "https://github.com/Kriistoffer"
        allRepositories = "jenkins-demo,jenkins-demo-2,jenkins-demo-3"
        PACKAGEMANAGER = "npm"
        slackChannel = "team1-dependency_check"
        jenkinsdemo_version = "1.3"
    }
    stages {
        stage("Setup") {
            steps {
                script {
                    echo "Cleaning up..."
                    cleanWs()

                    if (!fileExists("logs")) {
                        sh "mkdir logs"
                    }
                    env.allRepositories.tokenize(",").each { repo -> 
                        sh "git clone ${env.baseUrl}/${repo}"
                    }
                }
            }
        }
        stage("Node") {
            steps {
                script {
                    sh "cd jenkins-demo/myapp/"
                    sh "npm audit --json > jenkins-demo_version_${env.jenkinsdemo_version}.json || true"
                }
            }
        }
    }
    post {
        success {
            script {
                echo "success"
            }
        }
        failure {
            script {
                echo "failure"
            }
        }
        always {
            echo "Finished running."
        }
    }
}